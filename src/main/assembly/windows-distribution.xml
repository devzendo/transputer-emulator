<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>${cmake.classifier}</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/${cmake.binary.dir}/Emulator</directory>
            <includes>
                <include>temulate.exe</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/${cmake.binary.dir}/NodeServer/server</directory>
            <includes>
                <include>nodeserver.exe</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/NodeServer/client-examples/hello2</directory>
            <includes>
                <include>hello2.lst</include>
                <include>hello2.asm</include>
            </includes>
            <outputDirectory>examples/hello2</outputDirectory>
            <lineEnding>windows</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/NodeServer/client-examples/hello2</directory>
            <includes>
                <include>hello2.bin</include>
            </includes>
            <outputDirectory>examples/hello2</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/README.md</source>
            <outputDirectory>./</outputDirectory>
            <destName>README-transputer-emulator.md</destName>
            <lineEnding>windows</lineEnding>
        </file>
    </files>

</assembly>